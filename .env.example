# ============================================
# P402 Mini App Environment Variables
# ============================================
# Copy this to .env.local and fill in values
# IMPORTANT: Never commit .env.local to git

# ============================================
# REQUIRED - Core Configuration
# ============================================

# Your deployed URL (no trailing slash)
# Development: http://localhost:3001
# Production: https://mini.p402.io
NEXT_PUBLIC_URL=https://mini.p402.io

# P402 API URL - Server-side (used in API routes)
P402_API_URL=https://p402.io

# P402 API URL - Client-side (used in browser)
# Must match P402_API_URL for consistency
NEXT_PUBLIC_P402_API_URL=https://p402.io

# ============================================
# REQUIRED - Payment Configuration
# ============================================

# P402 Treasury Address on Base
# This is where Base Pay sends USDC
NEXT_PUBLIC_P402_TREASURY=0xb23f146251e3816a011e800bcbae704baa5619ec

# USDC Contract Address on Base Mainnet
NEXT_PUBLIC_USDC_ADDRESS=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913

# Base Chain ID (8453 for mainnet, 84532 for sepolia)
NEXT_PUBLIC_CHAIN_ID=8453

# ============================================
# REQUIRED - Manifest Signing (from base.dev)
# ============================================
# After signing at base.dev/preview, add these:

# JWT Header (base64 encoded)
MANIFEST_HEADER=

# JWT Payload (base64 encoded)
MANIFEST_PAYLOAD=

# Signature (hex string starting with 0x)
MANIFEST_SIGNATURE=

# ============================================
# OPTIONAL - Feature Flags
# ============================================

# Enable testnet mode (uses Base Sepolia)
# NEXT_PUBLIC_TESTNET=true

# Enable debug logging
# DEBUG=true

# Enable analytics
# NEXT_PUBLIC_ANALYTICS_ENABLED=true

# ============================================
# OPTIONAL - Analytics & Monitoring
# ============================================

# Google Analytics ID
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry DSN for error tracking
# NEXT_PUBLIC_SENTRY_DSN=

# ============================================
# OPTIONAL - Development Overrides
# ============================================

# Override API URL for local development
# P402_API_URL=http://localhost:3000

# Mock session for testing (bypasses real auth)
# NEXT_PUBLIC_MOCK_SESSION=sess_test_12345

# Skip manifest verification in development
# SKIP_MANIFEST_VERIFICATION=true
